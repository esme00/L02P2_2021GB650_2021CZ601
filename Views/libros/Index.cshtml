<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Creación de Libros</a>
    </div>
</nav>
<form asp-action="CrearLibros">
    @*Inicio del Formulario*@
    <div class="form-group row mb-4">

        @*NOMBRE*@

        <div class="row mt-3">
            <div class="col-sm-2">
                <label>
                    Nombre
                </label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="row mt-3">

            @* DIRECCION *@

            <div class="col-sm-2">
                @Html.Label("lblDescripcion", "Descripción")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder = "Ingrese la descripción" })
            </div>

            @*FIN DIRECCION *@

        </div>

        <div class="row mt-3">
            @* PRECIO *@
            <div class="col-sm-2">
                <label>
                    Precio
                </label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("precio", "", new { @class = "form-control" })
            </div>

            @* Autor *@
            <div class="col-sm-2">
                <label>
                    Autor
                </label>
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("id", ViewData["listadodeautores"] as SelectList, "Seleccione un Autor", new { @class = "form-control" })
            </div>
            @* Categoria *@
            <div class="col-sm-2">
                <label>
                    Categoria o Genero
                </label>
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("id", ViewData["listadodecategoria"] as SelectList, "Seleccione la categoria", new { @class = "form-control" })
            </div>

        </div>



        @* FIN FORMULARIO *@
    </div>

</form>


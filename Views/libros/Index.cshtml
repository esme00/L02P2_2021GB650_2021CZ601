
<form asp-action="CrearLibros" method="post" enctype="multipart/form-data">
    @*Inicio del Formulario*@
    <div class="form-group row mb-4">

        @*NOMBRE*@

        <div class="row mt-3">
            <div class="col-sm-2">
                <label>
                    Nombre
                </label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="row mt-3">
            <!-- DIRECCION -->
            <div class="col-sm-2">
                @Html.Label("lblDescripcion", "Descripción")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder = "Ingrese la descripción" })
            </div>
            <!-- FIN DIRECCION -->

            <div class="col-sm-4">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="archivo" name="archivo">
                        <label class="custom-file-label custom-color " for="archivo">Elegir archivo</label>
                    </div>
                </div>
                @*BTN GUARDADO*@
                <div class="form-group row mb-4">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8" style="margin-top: 10px;">
                        <input type="submit" class="btn btn-success btn-lg btn-block" value="Guardar" />
                    </div>
                </div>
                @* FIN BTN GUARDADO*@
            </div>

        <div class="row mt-3">
            @* PRECIO *@
            <div class="col-sm-2">
                <label>
                    Precio
                </label>
            </div>
            <div class="col-sm-2">
                @Html.TextBox("precio", "", new { @class = "form-control" })
            </div>

            @* Autor *@
            <div class="col-sm-2">
                <label>
                    Autor
                </label>
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("id_autor", ViewData["listadodeautores"] as SelectList, "Seleccione un Autor", new { @class = "form-control" })
            </div>
            @* Categoria *@
            <div class="col-sm-2">
                <label>
                    Categoria o Genero
                </label>
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("id_categoria", ViewData["listadodecategoria"] as SelectList, "Seleccione la categoria", new { @class = "form-control" })
            </div>

        </div>
         @*BTN GUARDADO*@
            <div class="form-group row mb-4">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-4" style="margin-top: 20px;">
                    <input type="submit" class="btn-primary" value="Guardar" />
                </div>
            </div>
            @* FIN BTN GUARDADO*@


            <table class="table table-sm">
                <thead>
                    <tr class="text-md-center">
                        <th>Nombre del Libro</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                    <th>Autor</th>
                    <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var libro in (IEnumerable<dynamic>)ViewData["listadodeequipo"])
                    {
                        <tr>
                        <td>@libro.nombre</td>
                        <td>@libro.descripcion</td>
                        <td>@libro.precio</td>

                        <td>@libro.autor</td>
                        <td>@libro.categoria</td>

                        <td>
                            <!-- Columna para botones de acción -->
                            <a href="@Url.Action("Delete", "libros", new { id = libro.id })" class="btn btn-danger">Eliminar</a>
                        </td>
                        </tr>
                       
                    }
                </tbody>
            </table>
            @* FIN TABLA*@



        @* FIN FORMULARIO *@
    </div>

</form>

